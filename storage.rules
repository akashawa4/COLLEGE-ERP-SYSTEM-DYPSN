rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }
    
    function validFile() {
      return request.resource.size < 20 * 1024 * 1024;
    }
    
    // Allow all authenticated users to read and write to documents
    match /documents/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && validFile();
    }
    
    // Legacy batch path structure for backward compatibility
    match /batch/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && validFile();
    }
    
    // Legacy paths for backward compatibility
    match /student-documents/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && validFile();
    }
    
    match /course-documents/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && validFile();
    }
    
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn() && validFile();
    }
  }
}
