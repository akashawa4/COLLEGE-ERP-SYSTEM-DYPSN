rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }
    
    function validFile() {
      return request.resource.size < 20 * 1024 * 1024;
    }
    
    // New path structure: /batch/{batch}/{dept}/year/{year}/sems/{sem}/divs/{div}/students/{studentId}/{fileName}
    match /batch/{batch}/{dept}/year/{year}/sems/{sem}/divs/{div}/students/{studentId}/{fileName} {
      allow write: if isSignedIn() && validFile();
      allow read: if true;
    }
    
    // Legacy paths for backward compatibility
    match /student-documents/{allPaths=**} {
      allow write: if isSignedIn() && validFile();
      allow read: if true;
    }
    
    match /course-documents/{allPaths=**} {
      allow write: if isSignedIn() && validFile();
      allow read: if true;
    }
    
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn();
    }
  }
}
